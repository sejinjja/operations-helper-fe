{
  "manifest_version": 3,
  "name": "Operations Helper 4 FE",
  "version": "1.0",
  "description": "운영 도움 용도",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost/*",
    "http://localhost:*/*",
    "http://127.0.0.1/*",
    "http://127.0.0.1:*/*"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://localhost:*/*",
        "http://127.0.0.1/*",
        "http://127.0.0.1:*/*"
      ],
      "matches": ["<all_urls>"],
      "world": "MAIN",
      "js": ["src/main/index.js"]
    },    
    {
      "matches": [
        "http://localhost/*",
        "http://localhost:*/*",
        "http://127.0.0.1/*",
        "http://127.0.0.1:*/*"
      ],
      "matches": ["<all_urls>"],
      "js": ["src/extension/index.js"]
    }
  ]
}
